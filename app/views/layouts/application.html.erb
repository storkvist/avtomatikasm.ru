<!DOCTYPE html>
<html>
<head>
  <title>АвтоматикаСпецМонтаж</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <a class="logo" href="/">
    <%= image_tag 'logo.svg', alt: 'АвтоматикаСпецМонтаж' %>

    <h1>
      АвтоматикаСпецМонтаж
      <small>проектирование, монтаж, обслуживание</small>
    </h1>
  </a>

  <h1 class="tel">+7 495 514-99-14</h1>
</header>

<nav>
  <ul>
    <% Comfy::Cms::Page.for_category('Главное меню').published.each do |page| %>
      <li><%= link_to(page.label, page.full_path) %></li>
    <% end %>
  </ul>
</nav>

<%= yield %>

<footer>
  <div class="copy">
    <a href="/">
      <h3>АвтоматикаСпецМонтаж</h3>
    </a>

    <div class="tel">+7 495 514-99-14</div>
    <a href="mailto:info@avtomatikasm.ru">info@avtomatikasm.ru</a>
  </div>

  <ul>
    <% Comfy::Cms::Page.for_category('Нижнее меню').published.each do |page| %>
      <li><%= link_to(page.label, page.full_path) %></li>
    <% end %>
  </ul>
</footer>

</body>
</html>
