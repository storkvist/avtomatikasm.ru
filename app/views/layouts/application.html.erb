<!DOCTYPE html>
<html>
<head>
  <title>АвтоматикаСпецМонтаж</title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <link href="http://fonts.googleapis.com/css?family=PT+Sans:400,700&subset=latin,cyrillic"
        rel="stylesheet" type="text/css">

  <%= javascript_include_tag 'application' %>

  <%= csrf_meta_tags %>

  <!-- Yandex.Metrika counter -->
  <script type="text/javascript">
    (function (d, w, c) {
      (w[c] = w[c] || []).push(function() {
        try {
          w.yaCounter31920501 = new Ya.Metrika({
            id:31920501,
            clickmap:true,
            trackLinks:true,
            accurateTrackBounce:true,
            webvisor:true
          });
        } catch(e) { }
      });

      var n = d.getElementsByTagName("script")[0],
        s = d.createElement("script"),
        f = function () { n.parentNode.insertBefore(s, n); };
      s.type = "text/javascript";
      s.async = true;
      s.src = "https://mc.yandex.ru/metrika/watch.js";

      if (w.opera == "[object Opera]") {
        d.addEventListener("DOMContentLoaded", f, false);
      } else { f(); }
    })(document, window, "yandex_metrika_callbacks");
  </script>
  <noscript><div><img src="https://mc.yandex.ru/watch/31920501" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
  <!-- /Yandex.Metrika counter -->
</head>
<body>
<header class="group">
  <div class="group page-wrapper">
    <a class="logo" href="/">
      <%= image_tag 'logo-curves.svg',
                    alt: 'АвтоматикаСпецМонтаж: проектирование, монтаж, обслуживание' %>
    </a>

    <div class="logo-contacts">
      <div class="tel">+7 495 514-99-14</div>
      <a href="mailto:info@avtomatikasm.ru">info@avtomatikasm.ru</a>
    </div>
  </div>

  <nav class="group nav-main">
    <ul>
      <% Comfy::Cms::Page.for_category('Главное меню').published.each do |page| %>
        <li class="<%= 'current' if "/#{params[:cms_path]}" == page.full_path %>">
          <%= link_to(page.label, page.full_path) %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>

<%= yield %>

<footer class="group">
  <div class="page-wrapper">
    <div class="headquarters">
      <a href="/">
        <h3>АвтоматикаСпецМонтаж</h3>
      </a>

      <div class="tel">+7 495 514-99-14</div>
      <a href="mailto:info@avtomatikasm.ru">info@avtomatikasm.ru</a>
    </div>

    <nav class="nav-footer">
      <ul>
        <% Comfy::Cms::Page.for_category('Нижнее меню').published.each do |page| %>
          <li><%= link_to(page.label, page.full_path) %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</footer>
</body>
</html>
